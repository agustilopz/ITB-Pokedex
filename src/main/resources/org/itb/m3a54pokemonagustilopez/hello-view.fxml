                <Label fx:id="lblName"  />
                <Label fx:id="lblType1"  />
                <Label fx:id="lblType2" />
                <Label fx:id="lblHp" />
                <Label fx:id="lblAttack" />
                <Label fx:id="lblDefense" />
                <Label fx:id="lblspAtk" />
                <Label fx:id="lblspDef" />
                <Label fx:id="lblspeed" />
            </children></VBox>
         <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0">
            <children>
                <Button fx:id="btnNext" onAction="#nextPokemon" text="&gt;" />
            </children>
         </VBox>
      </children></HBox>
