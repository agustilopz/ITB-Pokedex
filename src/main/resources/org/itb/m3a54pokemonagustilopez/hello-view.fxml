<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itb.m3a54pokemonagustilopez.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
            <children>

                <Button fx:id="btnPrevious" onAction="#previousPokemon" text="&lt;" />
            </children></VBox>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <!--<Button text="Hello!" onAction="#onHelloButtonClick"/>-->
                <!-- Element Button per a interactuar amb l'usuari@ -->
                <!--<Button fx:id="buttonHello" onMouseClicked="#onbuttonHelloClick" text="Click Here!" textFill="#ee0c0c"/>-->
