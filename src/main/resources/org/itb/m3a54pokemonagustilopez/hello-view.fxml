<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itb.m3a54pokemonagustilopez.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="50.0">
            <children>
                <Button fx:id="btnPrevious" onAction="#previousPokemon" text="&lt;" />
            </children></VBox>
         <VBox alignment="CENTER" prefHeight="450.0" prefWidth="350.0">
            <children>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label fx:id="lblHp" text="HP" />
                            <ProgressBar fx:id="progressBarHp" minHeight="25.0" minWidth="20.0" prefHeight="200.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #4caf50;" />
                        </children>
                     </HBox>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label fx:id="lblAttack" text="Attack" />
                            <ProgressBar fx:id="progressBarAttack" minHeight="25.0" minWidth="20.0" prefHeight="200.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #FF0000;" />
                        </children>
                     </HBox>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label fx:id="lblDefense" text="Defense" />
                            <ProgressBar fx:id="progressBarDefense" minHeight="25.0" minWidth="20.0" prefHeight="200.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #FFA500;" />
                        </children>
                     </HBox>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label fx:id="lblspAtk" text="Sp. Atk" />
                            <ProgressBar fx:id="progressBarSpAtk" minHeight="25.0" minWidth="20.0" prefHeight="200.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #9B4D96;" />
                        </children>
                     </HBox>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label fx:id="lblspDef" text="Sp. Def" />
                            <ProgressBar fx:id="progressBarSpDef" minHeight="25.0" minWidth="20.0" prefHeight="200.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #FFFF00;" />
                        </children>
                     </HBox>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label fx:id="lblspeed" text="Speed" />
                            <ProgressBar fx:id="progressBarSpeed" minHeight="25.0" minWidth="20.0" prefHeight="200.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #0000FF;" />
                        </children>
                     </HBox>
                  </children></VBox>
                <!--<Button text="Hello!" onAction="#onHelloButtonClick"/>-->
                <!-- Element Button per a interactuar amb l'usuari@ -->
                <!--<Button fx:id="buttonHello" onMouseClicked="#onbuttonHelloClick" text="Click Here!" textFill="#ee0c0c"/>-->
                <Label fx:id="lblCount" text="1/5" />
                <Label fx:id="lblName" text="BJKDBJ" />
                <Label fx:id="lblType1" />
                <Label fx:id="lblType2" />
                <Label fx:id="lblEncounters1" />
                <Label fx:id="lblEncounters2" />
                <Label fx:id="lblEncounters3" />
            </children></VBox>
         <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="50.0">
            <children>
                <Button fx:id="btnNext" onAction="#nextPokemon" text="&gt;" />
            </children>
         </VBox>
      </children></HBox>
</VBox>
