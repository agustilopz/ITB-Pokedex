<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="460.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itb.m3a54pokemonagustilopez.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ToolBar prefHeight="40.0" prefWidth="200.0">
     <items>
         <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="100.0">
            <children>
                <Button fx:id="btnPrevious" onAction="#previousPokemon" text="&lt;" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
            <children>
                <!--<Button text="Hello!" onAction="#onHelloButtonClick"/>-->
                <!-- Element Button per a interactuar amb l'usuari@ -->
                <!--<Button fx:id="buttonHello" onMouseClicked="#onbuttonHelloClick" text="Click Here!" textFill="#ee0c0c"/>-->
                <Label fx:id="lblCount" text="1/5" />
            </children>
         </HBox>
         <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="100.0">
            <children>
                <Button fx:id="btnNext" alignment="CENTER_RIGHT" contentDisplay="RIGHT" onAction="#nextPokemon" text="&gt;" textAlignment="RIGHT" />
            </children>
         </HBox>
     </items>
   </ToolBar>
   <HBox prefHeight="30.0" prefWidth="200.0">
      <children>
         <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblName" text="Charmander" />
            </children>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets left="15.0" />
            </padding>
         </HBox>
         <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblType1" text="FIRE">
                  <padding>
                     <Insets right="15.0" />
                  </padding>
               </Label>
                <Label fx:id="lblType2" text="Type 2" />
            </children>
         </HBox>
      </children></HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <VBox prefHeight="36.0" prefWidth="99.0">
                        <children>
                            <Label fx:id="lblHp" prefHeight="20.0" text="HP" />
                            <Label fx:id="lblAttack" prefHeight="20.0" text="Attack" />
                            <Label fx:id="lblDefense" prefHeight="20.0" text="Defense" />
                            <Label fx:id="lblspAtk" prefHeight="20.0" text="Sp. Atk" />
                            <Label fx:id="lblspDef" prefHeight="20.0" text="Sp. Def" />
                            <Label fx:id="lblspeed" prefHeight="20.0" text="Speed" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="74.0">
                        <children>
                            <ProgressBar fx:id="progressBarHp" minHeight="18.0" minWidth="20.0" prefHeight="20.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #4caf50; " />
                            <ProgressBar fx:id="progressBarAttack" minHeight="18.0" minWidth="20.0" prefHeight="20.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #FF0000;" />
                            <ProgressBar fx:id="progressBarDefense" minHeight="20.0" minWidth="20.0" prefHeight="20.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #FFA500;" />
                            <ProgressBar fx:id="progressBarSpAtk" minHeight="20.0" minWidth="20.0" prefHeight="20.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #9B4D96;" />
                            <ProgressBar fx:id="progressBarSpDef" minHeight="20.0" minWidth="20.0" prefHeight="20.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #FFFF00;" />
                            <ProgressBar fx:id="progressBarSpeed" minHeight="20.0" minWidth="20.0" prefHeight="20.0" prefWidth="153.0" progress="0.5" style="-fx-accent: #0000FF;" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </children>
         </HBox>
         <VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0">
            <children>
                <ImageView fx:id="pokemonImage" fitHeight=" 125.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
            </children></VBox>
      </children></HBox>
   <VBox prefHeight="75.0" prefWidth="100.0">
      <children>
          <Label fx:id="lblEncounters1" text="Encounters" />
          <Label fx:id="lblEncounters2" text="Number Defeated: 0" />
          <Label fx:id="lblEncounters3" text="Number Captured: 0" />
      </children>
   </VBox>
</VBox>
